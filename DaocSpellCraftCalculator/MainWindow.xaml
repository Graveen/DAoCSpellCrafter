<Window
        x:Class="DaocSpellCraftCalculator.MainWindow"
        x:Name="I_MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:view="clr-namespace:DaocSpellCraftCalculator.Views"
        xmlns:conv="clr-namespace:DaocSpellCraftCalculator.Tools.Binding"
        Title="DAoC v1.118 Xylene's SpellCraft Calculator" 
        WindowStartupLocation="CenterScreen" WindowState="Maximized" Icon="Images/Daoc.ico"
        DataContext="{Binding Source={StaticResource ServiceLocator}, Path=MainVM}"
        MinHeight="768" MinWidth="1024" Loaded="I_MainWindow_Loaded">


    <Window.Resources>
        <conv:StatsCapConverter x:Key="statsCapConverter" />
        <BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
        <conv:BooleanToBrushConverter x:Key="booleanToBrushConverter" />
        <conv:BooleanToFontStyleConverter x:Key="booleanToFontStyleConverter" />
        <conv:BooleanToBoldConverter x:Key="booleanToBoldConverter" />
        <conv:SlotNameConverter x:Key="slotNameConverter" />
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Command="{Binding CreateTemplateCommand}" Key="N" Modifiers="Control"/>
        <KeyBinding Command="{Binding OpenCommand}" Key="O" Modifiers="Control"/>
        <KeyBinding Command="{Binding SaveCommand}" Key="S" Modifiers="Control"/>
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Region Barre d'action principale-->
        <Grid Grid.Row="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <telerik:RadToolBar Grid.Column="0">
                <Button ToolTip="New Template" Command="{Binding CreateTemplateCommand}" >
                    <Image Source="/Images/new.png" Height="32" Width="32"/>
                </Button>
                <Button ToolTip="Open Template" Command="{Binding OpenCommand}">
                    <Image Source="/Images/open.png" Height="32" Width="32"/>
                </Button>
                <Button ToolTip="Save" Command="{Binding SaveCommand}">
                    <Image Source="/Images/save.png" Height="32" Width="32"/>
                </Button>
                <Button ToolTip="Save As" Command="{Binding SaveAsCommand}">
                    <Image Source="/Images/saveas.png" Height="32" Width="32"/>
                </Button>
            </telerik:RadToolBar>

            <telerik:RadToolBar Grid.Column="1">
                <Button ToolTip="Options" Command="{Binding ShowOptionsCommand}">
                    <Image Source="/Images/options.png" Height="32" Width="32"/>
                </Button>
            </telerik:RadToolBar>

            <telerik:RadToolBar Grid.Column="2">
                <Button ToolTip="Full Report" Command="{Binding FullReportCommand}">
                    <Image Source="/Images/cr.png" Height="32" Width="32"/>
                </Button>
                <Button ToolTip="Simplified Report" Command="{Binding SimplifiedReportCommand}">
                    <Image Source="/Images/crs.png" Height="32" Width="32"/>
                </Button>
                <Button ToolTip="Gems List" Command="{Binding GemListReportCommand}">
                    <Image Source="/Images/report_gem.png" Height="32" Width="32"/>
                </Button>
                <Button ToolTip="Materials List" Command="{Binding GemMaterialsReportCommand}">
                    <Image Source="/Images/report_mat.png" Height="32" Width="32"/>
                </Button>
            </telerik:RadToolBar>

            <telerik:RadToolBar Grid.Column="3">
                <Button ToolTip="Clear Craft" Command="{Binding SelectedTemplate.ClearCraftCommand}">
                    <Image Source="/Images/clear.png" Height="32" Width="32"/>
                </Button>

                <Button ToolTip="Set Macros" Command="{Binding SelectedTemplate.SetMacrosCommand}">
                    <Image Source="/Images/macros.png" Height="32" Width="32"/>
                </Button>
            </telerik:RadToolBar>

            <telerik:RadToolBar Grid.Column="4">
                <Button ToolTip="About" Command="{Binding ShowAboutCommand}">
                    <Image Source="/Images/about.png" Height="32" Width="32"/>
                </Button>
            </telerik:RadToolBar>

            <telerik:RadToolBar Grid.Column="5">
            </telerik:RadToolBar>

        </Grid>

        <!--End Region-->

        <!--Region Contenu-->
        <Grid Grid.Row="1">
            <telerik:RadTabControl Margin="2"  
                                   SelectedItemRemoveBehaviour="SelectPrevious"
                                   ItemsSource="{Binding LstTemplates}" 
                                   SelectedItem="{Binding SelectedTemplate}" 
                                   ItemContainerStyle="{StaticResource ClosableStyle}"
                                   DisplayMemberPath="Name"
                                   IsContentPreserved ="True"
                                   >
                <telerik:RadTabControl.ContentTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" MinWidth="220"/>
                                <ColumnDefinition Width="4*"/>
                            </Grid.ColumnDefinitions>

                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <telerik:RadExpander IsExpanded="True" Header="Character">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="24"/>
                                                <RowDefinition Height="24"/>
                                                <RowDefinition Height="24"/>
                                                <RowDefinition Height="24"/>
                                                <RowDefinition Height="24"/>
                                                <RowDefinition Height="24"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Text="Name :" HorizontalAlignment="Right" />
                                            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}" Grid.Column="1" MaxLength="100" Margin="2"/>

                                            <TextBlock Text="Realm :" HorizontalAlignment="Right" Grid.Row="1" />
                                            <telerik:RadComboBox ItemsSource="{Binding LstRealms}" SelectedValue="{Binding Realm}" EmptyText="Select a realm" 
                                                             DisplayMemberPath="Full"
                                                             SelectedValuePath="Code"
                                                             Grid.Row="1" Grid.Column="1" Margin="2" >
                                                <telerik:RadComboBox.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <VirtualizingStackPanel />
                                                    </ItemsPanelTemplate>
                                                </telerik:RadComboBox.ItemsPanel>
                                            </telerik:RadComboBox>

                                            <TextBlock Text="Class :" HorizontalAlignment="Right" Grid.Row="2" />
                                            <telerik:RadComboBox ItemsSource="{Binding LstClasses}" SelectedValue="{Binding Class}" EmptyText="Select a class" 
                                                             DisplayMemberPath="Full"
                                                             SelectedValuePath="Code"    
                                                             Grid.Row="2" Grid.Column="1" Margin="2" >
                                                <telerik:RadComboBox.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <VirtualizingStackPanel />
                                                    </ItemsPanelTemplate>
                                                </telerik:RadComboBox.ItemsPanel>
                                            </telerik:RadComboBox>

                                            <TextBlock Text="Race :" HorizontalAlignment="Right" Grid.Row="3" />
                                            <telerik:RadComboBox ItemsSource="{Binding LstRaces}" SelectedValue="{Binding Race}" EmptyText="Select a race" 
                                                             DisplayMemberPath="Full"
                                                             SelectedValuePath="Code"    
                                                             Grid.Row="3" Grid.Column="1" Margin="2" >
                                                <telerik:RadComboBox.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <VirtualizingStackPanel />
                                                    </ItemsPanelTemplate>
                                                </telerik:RadComboBox.ItemsPanel>
                                            </telerik:RadComboBox>

                                            <TextBlock Text="Level :" HorizontalAlignment="Right" Grid.Row="4" />
                                            <TextBox Text="{Binding Level, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}" Grid.Row="4" Grid.Column="1" MaxLength="2" Margin="2"/>

                                            <TextBlock Text="Rank :" HorizontalAlignment="Right" Grid.Row="5" />
                                            <TextBox Text="{Binding RealmRank, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}" Grid.Row="5" Grid.Column="1" MaxLength="2" Margin="2"/>

                                        </Grid>

                                    </telerik:RadExpander>

                                    <telerik:RadExpander IsExpanded="True" Grid.Row="1">
                                        <telerik:RadExpander.Header>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="30"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Text="Stats" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="12"/>
                                                <Button Command="{Binding EditLstStatsCommand}" Grid.Column="1" ToolTip="Edit Stats List" Margin="2">
                                                    <Image Source="/Images/edit.png" />
                                                </Button>

                                            </Grid>
                                        </telerik:RadExpander.Header>

                                        <telerik:RadListBox ItemsSource="{Binding LstCaracs}" FontSize="10" MouseDoubleClick="OnStatDoubleClick" SelectionMode="Single">
                                            <telerik:RadListBox.ItemContainerStyle>
                                                <Style TargetType="{x:Type telerik:RadListBoxItem}" BasedOn="{StaticResource RadListBoxItemStyle}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsImportant}" Value="False">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </telerik:RadListBox.ItemContainerStyle>
                                            <telerik:RadListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="20,0,0,0" ToolTip="{Binding Resume, Mode=OneWay}">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="30"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="30"/>
                                                            <ColumnDefinition Width="30"/>
                                                        </Grid.ColumnDefinitions>


                                                        <!--Nom de la stat-->
                                                        <TextBlock Text="{Binding Stat.Full}" Grid.Column="1" />


                                                        <!--Valeur actuelle-->
                                                        <TextBlock Text="{Binding Value}" Grid.Column="2" HorizontalAlignment="Right"/>


                                                        <!--Séparateur-->
                                                        <TextBlock Text="/" Grid.Column="3" />


                                                        <!--Valeur Max-->
                                                        <TextBlock Text="{Binding MaxValue}" Grid.Column="4" HorizontalAlignment="Left"/>


                                                        <!--Diff Max-->
                                                        <TextBlock Text="{Binding Diff}" Foreground="{Binding Diff, Converter={StaticResource ResourceKey=statsCapConverter}}" 
                                                               Grid.Column="5"  />

                                                    </Grid>
                                                </DataTemplate>
                                            </telerik:RadListBox.ItemTemplate>
                                        </telerik:RadListBox>




                                    </telerik:RadExpander>


                                    <telerik:RadExpander IsExpanded="True" Grid.Row="2">
                                        <telerik:RadExpander.Header>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="30"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Text="Resists" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="12"/>
                                                <CheckBox IsChecked="{Binding IncludeRaciales}" Grid.Column="1" ToolTip="Include Raciales Resist" Margin="2" />

                                            </Grid>
                                        </telerik:RadExpander.Header>

                                        <telerik:RadListBox ItemsSource="{Binding LstResists}" FontSize="10" MouseDoubleClick="OnResistDoubleClick" SelectionMode="Single">

                                            <telerik:RadListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="20,0,0,0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="30"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="30"/>
                                                            <ColumnDefinition Width="30"/>
                                                        </Grid.ColumnDefinitions>

                                                        <!--Nom de la resist-->
                                                        <TextBlock Text="{Binding Stat.Full}" />

                                                        <!--Valeur actuelle-->
                                                        <TextBlock Text="{Binding Value}" Grid.Column="1" HorizontalAlignment="Right"/>

                                                        <!--Séparateur-->
                                                        <TextBlock Text="/" Grid.Column="2" />

                                                        <!--Valeur Max-->
                                                        <TextBlock Text="{Binding MaxValue}" Grid.Column="3" HorizontalAlignment="Left"/>

                                                        <!--Diff Max-->
                                                        <TextBlock Text="{Binding Diff}" Foreground="{Binding Diff, Converter={StaticResource ResourceKey=statsCapConverter}}" 
                                                               Grid.Column="4" />
                                                    </Grid>
                                                </DataTemplate>
                                            </telerik:RadListBox.ItemTemplate>
                                        </telerik:RadListBox>

                                    </telerik:RadExpander>

                                    <telerik:RadExpander IsExpanded="True" Grid.Row="3">
                                        <telerik:RadExpander.Header>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Text="Bonuses" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="12"/>

                                            </Grid>
                                        </telerik:RadExpander.Header>

                                        <telerik:RadListBox ItemsSource="{Binding LstBonuses}" FontSize="10" MouseDoubleClick="OnBonusesDoubleClick" SelectionMode="Single">
                                            <telerik:RadListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="20,0,0,0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="30"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="30"/>
                                                            <ColumnDefinition Width="30"/>
                                                        </Grid.ColumnDefinitions>

                                                        <!--Nom du bonus-->
                                                        <TextBlock Text="{Binding Stat.Full}" Grid.Column="0" />

                                                        <!--Valeur actuelle-->
                                                        <TextBlock Text="{Binding Value}" Grid.Column="1" HorizontalAlignment="Right"/>

                                                        <!--Séparateur-->
                                                        <TextBlock Text="/" Grid.Column="2" />

                                                        <!--Valeur Max-->
                                                        <TextBlock Text="{Binding MaxValue}" Grid.Column="3" HorizontalAlignment="Left"/>

                                                        <!--Diff Max-->
                                                        <TextBlock Text="{Binding Diff}" Foreground="{Binding Diff, Converter={StaticResource ResourceKey=statsCapConverter}}" 
                                                               Grid.Column="4"  />

                                                    </Grid>
                                                </DataTemplate>
                                            </telerik:RadListBox.ItemTemplate>
                                        </telerik:RadListBox>

                                    </telerik:RadExpander>

                                    <telerik:RadExpander IsExpanded="True" Grid.Row="4">
                                        <telerik:RadExpander.Header>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="30"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Text="Skills" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="12"/>
                                                <Button Command="{Binding EditLstSkillsCommand}" Grid.Column="1" ToolTip="Edit Skills List" Margin="2">
                                                    <Image Source="/Images/edit.png" />
                                                </Button>

                                            </Grid>
                                        </telerik:RadExpander.Header>

                                        <telerik:RadListBox ItemsSource="{Binding LstSkills}" FontSize="10" MouseDoubleClick="OnSkillDoubleClick" SelectionMode="Single">
                                            <telerik:RadListBox.ItemContainerStyle>
                                                <Style TargetType="{x:Type telerik:RadListBoxItem}" BasedOn="{StaticResource RadListBoxItemStyle}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsImportant}" Value="False">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </telerik:RadListBox.ItemContainerStyle>
                                            <telerik:RadListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="20,0,0,0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="30"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="30"/>
                                                            <ColumnDefinition Width="30"/>
                                                        </Grid.ColumnDefinitions>

                                                        <!--Nom du skill-->
                                                        <TextBlock Text="{Binding Stat.Full}" Grid.Column="1" />

                                                        <!--Valeur actuelle-->
                                                        <TextBlock Text="{Binding Value}" Grid.Column="2" HorizontalAlignment="Right"/>

                                                        <!--Séparateur-->
                                                        <TextBlock Text="/" Grid.Column="3" />

                                                        <!--Valeur Max-->
                                                        <TextBlock Text="{Binding MaxValue}" Grid.Column="4" HorizontalAlignment="Left"/>

                                                        <!--Diff Max-->
                                                        <TextBlock Text="{Binding Diff}" Foreground="{Binding Diff, Converter={StaticResource ResourceKey=statsCapConverter}}" 
                                                               Grid.Column="5"  />

                                                    </Grid>
                                                </DataTemplate>
                                            </telerik:RadListBox.ItemTemplate>
                                        </telerik:RadListBox>




                                    </telerik:RadExpander>

                                </Grid>
                            </ScrollViewer>

                            <Grid Grid.Column="1" Margin="40">
                                <Grid.RowDefinitions>
                                    <RowDefinition  Height="*"/>
                                    <RowDefinition  Height="70"/>
                                    <RowDefinition  Height="*"/>
                                    <RowDefinition  Height="70"/>
                                    <RowDefinition  Height="*"/>
                                    <RowDefinition  Height="70"/>
                                    <RowDefinition  Height="*"/>
                                    <RowDefinition  Height="70"/>
                                    <RowDefinition  Height="*"/>
                                    <RowDefinition  Height="70"/>
                                    <RowDefinition  Height="*"/>
                                    <RowDefinition  Height="70"/>
                                    <RowDefinition  Height="*"/>
                                    <RowDefinition  Height="70"/>
                                    <RowDefinition  Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>


                                <!--Torse-->
                                <telerik:RadRadioButton GroupName="slotGroup" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ToolTip="{Binding Torso.Name}" 
                                                        Command="{Binding SetTorsoSelectedCommand}"
                                                        FontStyle="{Binding Torso.HasBonusDefined,  Converter={StaticResource booleanToFontStyleConverter}}"
                                                        FontWeight="{Binding Torso.HasBonusDefined, Converter={StaticResource booleanToBoldConverter}}"
                                                        MouseDoubleClick="OnSlotDoubleClick"
                                                        >
                                    <telerik:RadRadioButton.Style>
                                        <Style TargetType="{x:Type telerik:RadRadioButton}" BasedOn="{StaticResource RadRadioButtonStyle }">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Torso.IsEquipedAndDefined}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource ControlBackground_MouseOver}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Torso.IsEquipedAndDefined}" Value="False">
                                                    <Setter Property="Background" Value="{StaticResource ControlBackground_Normal}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </telerik:RadRadioButton.Style>
                                    <TextBlock Text="{Binding Torso.Name, Converter={StaticResource slotNameConverter}, ConverterParameter='TOR'}" TextWrapping="WrapWithOverflow" TextAlignment="Center" />
                                </telerik:RadRadioButton>

                                <!--Collier-->
                                <telerik:RadRadioButton GroupName="slotGroup" Grid.Row="1" Grid.Column="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ToolTip="{Binding Necklace.Name}" 
                                                        Command="{Binding SetNeckSelectedCommand}"
                                                        FontStyle="{Binding Necklace.HasBonusDefined,  Converter={StaticResource booleanToFontStyleConverter}}"
                                                        FontWeight="{Binding Necklace.HasBonusDefined, Converter={StaticResource booleanToBoldConverter}}"
                                                        MouseDoubleClick="OnSlotDoubleClick"
                                                        >
                                    <telerik:RadRadioButton.Style>
                                        <Style TargetType="{x:Type telerik:RadRadioButton}" BasedOn="{StaticResource RadRadioButtonStyle }">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Necklace.IsEquipedAndDefined}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource ControlBackground_MouseOver}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Necklace.IsEquipedAndDefined}" Value="False">
                                                    <Setter Property="Background" Value="{StaticResource ControlBackground_Normal}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </telerik:RadRadioButton.Style>
                                    <TextBlock Text="{Binding Necklace.Name, Converter={StaticResource slotNameConverter}, ConverterParameter='NEC'}" TextWrapping="WrapWithOverflow" TextAlignment="Center" />
                                </telerik:RadRadioButton>

                                <!--Myth-->
                                <telerik:RadRadioButton GroupName="slotGroup" Grid.Row="1" Grid.Column="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ToolTip="{Binding Myth.Name}" 
                                                        Command="{Binding SetMythSelectedCommand}"
                                                        FontStyle="{Binding Myth.HasBonusDefined,  Converter={StaticResource booleanToFontStyleConverter}}"
                                                        FontWeight="{Binding Myth.HasBonusDefined, Converter={StaticResource booleanToBoldConverter}}"
                                                        MouseDoubleClick="OnSlotDoubleClick"
                                                        >
                                    <telerik:RadRadioButton.Style>
                                        <Style TargetType="{x:Type telerik:RadRadioButton}" BasedOn="{StaticResource RadRadioButtonStyle }">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Myth.IsEquipedAndDefined}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource ControlBackground_MouseOver}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Myth.IsEquipedAndDefined}" Value="False">
                                                    <Setter Property="Background" Value="{StaticResource ControlBackground_Normal}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </telerik:RadRadioButton.Style>
                                    <TextBlock Text="{Binding Myth.Name, Converter={StaticResource slotNameConverter}, ConverterParameter='MYT'}" TextWrapping="WrapWithOverflow" TextAlignment="Center" />
                                </telerik:RadRadioButton>

                                <!--Cloack-->
                                <telerik:RadRadioButton GroupName="slotGroup" Grid.Row="1" Grid.Column="7" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ToolTip="{Binding Cloak.Name}" 
                                                        Command="{Binding SetCloakSelectedCommand}" 
                                                        FontStyle="{Binding Cloak.HasBonusDefined,  Converter={StaticResource booleanToFontStyleConverter}}"
                                                        FontWeight="{Binding Cloak.HasBonusDefined, Converter={StaticResource booleanToBoldConverter}}"
                                                        MouseDoubleClick="OnSlotDoubleClick"
                                                        >
                                    <telerik:RadRadioButton.Style>
                                        <Style TargetType="{x:Type telerik:RadRadioButton}" BasedOn="{StaticResource RadRadioButtonStyle }">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Cloak.IsEquipedAndDefined}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource ControlBackground_MouseOver}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Cloak.IsEquipedAndDefined}" Value="False">
                                                    <Setter Property="Background" Value="{StaticResource ControlBackground_Normal}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </telerik:RadRadioButton.Style>
                                    <TextBlock Text="{Binding Cloak.Name, Converter={StaticResource slotNameConverter}, ConverterParameter='CLO'}" TextWrapping="WrapWithOverflow" TextAlignment="Center" />
                                </telerik:RadRadioButton>

                                <!--Head-->
                                <telerik:RadRadioButton GroupName="slotGroup" Grid.Row="1" Grid.Column="9" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ToolTip="{Binding Head.Name}" 
                                                        Command="{Binding SetHeadSelectedCommand}"
                                                        FontStyle="{Binding Head.HasBonusDefined,  Converter={StaticResource booleanToFontStyleConverter}}"
                                                        FontWeight="{Binding Head.HasBonusDefined, Converter={StaticResource booleanToBoldConverter}}"
                                                        MouseDoubleClick="OnSlotDoubleClick"
                                                        >
                                    <telerik:RadRadioButton.Style>
                                        <Style TargetType="{x:Type telerik:RadRadioButton}" BasedOn="{StaticResource RadRadioButtonStyle }">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Head.IsEquipedAndDefined}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource ControlBackground_MouseOver}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Head.IsEquipedAndDefined}" Value="False">
                                                    <Setter Property="Background" Value="{StaticResource ControlBackground_Normal}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </telerik:RadRadioButton.Style>
                                    <TextBlock Text="{Binding Head.Name, Converter={StaticResource slotNameConverter}, ConverterParameter='HEA'}" TextWrapping="WrapWithOverflow" TextAlignment="Center" />
                                </telerik:RadRadioButton>

                                <!--Bras-->
                                <telerik:RadRadioButton GroupName="slotGroup" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ToolTip="{Binding Arms.Name}" 
                                                        Command="{Binding SetArmsSelectedCommand}"
                                                        FontStyle="{Binding Arms.HasBonusDefined,  Converter={StaticResource booleanToFontStyleConverter}}"
                                                        FontWeight="{Binding Arms.HasBonusDefined, Converter={StaticResource booleanToBoldConverter}}"
                                                        MouseDoubleClick="OnSlotDoubleClick"
                                                        >
                                    <telerik:RadRadioButton.Style>
                                        <Style TargetType="{x:Type telerik:RadRadioButton}" BasedOn="{StaticResource RadRadioButtonStyle }">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Arms.IsEquipedAndDefined}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource ControlBackground_MouseOver}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Arms.IsEquipedAndDefined}" Value="False">
                                                    <Setter Property="Background" Value="{StaticResource ControlBackground_Normal}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </telerik:RadRadioButton.Style>
                                    <TextBlock Text="{Binding Arms.Name, Converter={StaticResource slotNameConverter}, ConverterParameter='ARM'}" TextWrapping="WrapWithOverflow" TextAlignment="Center" />
                                </telerik:RadRadioButton>

                                <!--Bijou-->
                                <telerik:RadRadioButton GroupName="slotGroup" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ToolTip="{Binding Jewel.Name}" 
                                                        Command="{Binding SetJewelSelectedCommand}"
                                                        FontStyle="{Binding Jewel.HasBonusDefined,  Converter={StaticResource booleanToFontStyleConverter}}"
